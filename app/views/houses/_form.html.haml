= form_for @house do |f|
  - if @house.errors.any?
    #error_explanation
      %h2= "#{pluralize(@house.errors.count, "error")} prohibited this house from being saved:"
      %ul
        - @house.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :house_number
    = f.text_field :house_number
  .field
    = f.label :street
    = f.text_field :street_id
  .actions
    = f.submit 'Save'
