= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  .form-horizontal.col-md-6.col-md-offset-3.text-center
    %h2= "ВХОД В СИСТЕМУ МЕДСТАТРЕГ"
    = f.email_field :email, autofocus: true,
      class: 'form-control',
      placeholder: User.human_attribute_name(:email)
    = f.password_field :password, autocomplete: "off",
      class: 'form-control',
      placeholder: User.human_attribute_name(:password)
    %br/
    .form-actions
      = f.submit 'Войти', class: 'btn btn-primary'
